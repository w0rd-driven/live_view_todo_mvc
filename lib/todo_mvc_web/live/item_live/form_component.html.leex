<%= f = form_for @changeset, "#",
  id: "item-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "add" %>

  <%= text_input f, :text, placeholder: "what needs to be done?",
    class: "new-todo", autofocus: "" %>
  <%= error_tag f, :text %>
  <div style="display: none;"> <%= submit "Add", phx_disable_with: "Adding..." %> </div>
</form>
