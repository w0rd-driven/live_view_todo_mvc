<%= f = form_for @changeset, "#",
  id: "item-form-#{@item.id}",
  class: "item-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= text_input f, :text, placeholder: "What needs to be done?",
    class: "new-todo", autofocus: true %>
  <div style="display: none;"> <%= submit "Save", phx_disable_with: "Saving..." %> </div>
</form>
